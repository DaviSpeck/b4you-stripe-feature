{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@useCases/*": [
        "useCases/*"
      ],
      "@presentation/*": [
        "presentation/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@error/*": [
        "error/*"
      ],
      "@dto/*": [
        "dto/*"
      ],
      "@schemas/*": [
        "schemas/*"
      ],
      "@queues/*": [
        "queues/*"
      ],
      "@cron/*": [
        "cron/*"
      ],
      "@mails/*": [
        "mails/*"
      ],
      "@status/*": [
        "status/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "noFallthroughCasesInSwitch": true,
    "checkJs": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "build",
    "logs",
    ".git",
    "coverage",
    "*.test.js",
    "*.test.ts",
    "*.spec.js",
    "*.spec.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "allowImportingTsExtensions": true,
      "noEmit": true
    },
    "require": [
      "tsconfig-paths/register"
    ],
    "esm": false
  }
}